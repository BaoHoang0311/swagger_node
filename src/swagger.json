{
  "openapi": "3.0.0",
  "info": {
    "title": "swagger_demo_nodejs",
    "version": "1.0.0",
    "description": "swagger_demo_nodejs"
  },
  "servers": [
    {
      "url": "http://localhost:3056/api"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "login",
        "tags": ["Authen"],
        "responses": {
          "200": {
            "description": "login successfully"
          }
        },
        "description": "Authenticate a user with their credentials.\nExample:\n- bao/1234",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "default": "bao"
                  },
                  "password": {
                    "type": "string",
                    "default": "1234"
                  },
                  "date": {
                    "format": "date"
                  }
                },
                "required": ["username", "password"]
              }
            }
          }
        }
      }
    },
    "/get1": {
      "get": {
        "summary": "get1",
        "tags": ["Details"],
        "responses": {
          "200": {
            "description": "get1 successfully"
          }
        },
        "security": [
          {
            "BearerAuth": [],
            "ApiAuth":[]
          }
        ]
      }
    },
    "/get2": {
      "get": {
        "summary": "get2",
        "tags": ["Details"],
        "responses": {
          "200": {
            "description": "get2 successfully"
          }
        }
      }
    },
    "/get3/{nameee}": {
      "get": {
        "summary": "get3/:name",
        "tags": ["Details"],
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "age",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format":"date"
            }
          },
          {
            "name": "isCheck",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "get3 successfully"
          }
        }
      },
      "parameters": [
        {
          "name": "nameee",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ]
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer"
      },
      "ApiAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    }
  }
}
